{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",

    // ← enable source-maps
    "sourceMap": true,
    "inlineSources": true,

    "skipLibCheck": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,

    // ← IMPORTANT: drop in both vite/client and node types
    "types": ["vite/client", "node"],
    "allowSyntheticDefaultImports": true
  },
  // ← make sure TS also parses your config file
  "include": ["src", "vite.config.ts"],
  "exclude": ["node_modules", "dist"]
}
